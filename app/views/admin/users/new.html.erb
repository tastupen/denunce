<div class="text-center">
  <div class="form-all">
    <p id="alert"><%= alert %></p>
    <h1><a href="/"><%= image_tag "denunce.png", class: "logo" %></a></h1> 
    <h1>ユーザー登録</h1>
    
    <%= form_with model: [:admin, @user], local: true do |f|%>
      <div class="form-group">
        <%= f.label :nickname, '名前', class: "label-hidden" %>
        <%= f.text_field :nickname, class: 'form-control', placeholder: "ニックネーム", autocomplete: "off" %>
      </div>
  
      <div class="form-group">
        <%= f.label :email, 'メールアドレス', class: "label-hidden" %>
        <%= f.text_field :email, class: 'form-control', placeholder: "メールアドレス", autocomplete: "off" %>
      </div>
  
      <% if session[:user_id] %>
        <div class="form-group">
          <%= f.label :admin, class: 'form-check-label' do %>
            <%= f.check_box :admin, class: 'form-check-input' %>管理者権限
          <% end %>
        </div>
      <% end %>
  
      <div class="form-group">
        <%= f.label :password, 'パスワード', class: "label-hidden" %>
        <%= f.password_field :password, class: 'form-control', placeholder: "パスワード", autocomplete: "off" %>
      </div>
  
      <div class="form-group">
        <%= f.label :password_confirmation, 'パスワード(確認)', class: "label-hidden" %>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "パスワード確認", autocomplete: "off" %>
      </div>
  
      <%= f.submit '登録する', class: 'form-btn2' %>
    <% end %>
    
    <%= link_to 'ログイン', login_path %>
  </div>
</div>
